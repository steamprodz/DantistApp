<UserControl x:Class="DantistApp.UserControls.ReportElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="125" d:DesignWidth="180"
             Height="150">
    <Border BorderThickness="1" BorderBrush="Black" Margin="0,0,0,0.4">
        <Grid Margin="0.2,0.2,0.4,-1.2">
            <Grid.RowDefinitions>
                <RowDefinition Height="21*"/>
                <RowDefinition Height="4*"/>
            </Grid.RowDefinitions>
            <Button HorizontalAlignment="Left" VerticalAlignment="Top" Width="40" BorderThickness="0" Height="29" Click="button_LoadImage_Click">
                <Button.Background>
                    <ImageBrush ImageSource="/DantistApp;component/Icons/Arrow_icon.png" Stretch="Uniform"/>
                </Button.Background>
            </Button>
            <Button HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="39" Height="36" BorderThickness="0" Click="button_SaveImage_Click" Margin="0,0,0,23.6" Grid.RowSpan="2">
                <Button.Background>
                    <ImageBrush ImageSource="/DantistApp;component/Icons/Download_icon.png"/>
                </Button.Background>
            </Button>
            <Button HorizontalAlignment="Left" VerticalAlignment="Top" Width="37" BorderThickness="0" Height="27" Click="button_DeleteElement" Margin="0,96,0,0">
                <Button.Background>
                    <ImageBrush ImageSource="/DantistApp;component/Icons/trash_icon.png" Stretch="Uniform"/>
                </Button.Background>
            </Button>
            <Image Panel.ZIndex="-1" Margin="0,0,0,23.6" Grid.RowSpan="2"/>
            <Expander Header="Комментарии" HorizontalAlignment="Center" VerticalAlignment="Top" Height="169" Width="177" Margin="0,0.4,0,-145.4" IsExpanded="False" Panel.ZIndex="100" Grid.Row="1">
                <Grid Height="145" Margin="0,0,0.4,0">
                    <TextBox BorderThickness="2" TextWrapping="Wrap" Text="TextBox" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" BorderBrush="Black" Background="#FFC5F896" FontFamily="Arial" FontSize="11" Margin="0,0,-0.4,0"/>
                </Grid>
            </Expander>

        </Grid>
    </Border>
</UserControl>
