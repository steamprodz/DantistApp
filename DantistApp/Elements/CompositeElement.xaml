<UserControl x:Name="MyGroupedImage" x:Class="DantistApp.CompositeElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" Height="172.8" Width="104">
    <Grid>
        <Canvas x:Name="controlCanvas" MouseLeftButtonDown="CanvasMouseLeftButtonDown" MouseLeftButtonUp="CanvasMouseLeftButtonUp" MouseMove="CanvasMouseMove" Margin="0,0,0,-0.2">
            <Image x:Name="image_top" Source="{Binding SourceTop}" Canvas.Top="0" Canvas.Left="0" Width="{Binding Path=ElementWidth, ElementName=MyGroupedImage}"/>
            <Image x:Name="image_bot" Source="{Binding SourceBot}" Canvas.Top="{Binding Path=CenterDistance, ElementName=MyGroupedImage}" Canvas.Left="0" Width="{Binding Path=ElementWidth, ElementName=MyGroupedImage}"/>
        </Canvas>
    </Grid>
</UserControl>
