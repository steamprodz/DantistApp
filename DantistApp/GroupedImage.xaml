<UserControl x:Class="DantistApp.GroupedImage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Height="172.8" Width="104">
    <Grid>
        <Canvas x:Name="controlCanvas" MouseLeftButtonDown="CanvasMouseLeftButtonDown" MouseLeftButtonUp="CanvasMouseLeftButtonUp" MouseMove="CanvasMouseMove" Margin="0,0,0,-0.2">
            <Image x:Name="image_top" Source="{Binding SourceTop}" Height="56" Width="104" Canvas.Top="0" Canvas.Left="0"/>
            <Image x:Name="image_bot" Source="{Binding SourceBot}" Height="118" Width="104" Canvas.Left="0"/>
        </Canvas>
    </Grid>
</UserControl>
