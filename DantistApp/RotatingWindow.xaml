<Window x:Class="DantistApp.RotatingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вращение" Height="96" Width="248" ResizeMode="NoResize" Topmost="True" WindowStyle="ToolWindow">
    <Grid>
        <Slider x:Name="Slider_Rotate" HorizontalAlignment="Left" Margin="9,9,0,0" VerticalAlignment="Top" Width="221" ValueChanged="Slider_Rotate_ValueChanged" Maximum="180" Minimum="-180"/>
        <Button x:Name="btn_setDefault" Content="По умолчанию" HorizontalAlignment="Left" Margin="70,0,0,5" Width="99" Click="btn_setDefault_Click" Height="22" VerticalAlignment="Bottom"/>

    </Grid>
</Window>
