<Window x:Class="DantistApp.PanoramaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PanoramaWindow" Height="500" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="421*"/>
            <RowDefinition Height="49*"/>
        </Grid.RowDefinitions>
        <Button x:Name="Btn_AddPanorama" Content="Новое изображение" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="129" Height="29" Click="Btn_AddPanorama_Click"/>
        <Button x:Name="Btn_Close" Content="Закрыть" HorizontalAlignment="Left" Margin="144,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75" Height="29" Click="Btn_Close_Click"/>
        <Image x:Name="Image_Panorama"/>

    </Grid>
</Window>
